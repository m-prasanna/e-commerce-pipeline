pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "my-ecommerce-website"
        CONTAINER_NAME = "ecommerce-container"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker Image...'
                bat "docker build -t %DOCKER_IMAGE% ."
            }
        }

        stage('Remove Old Container') {
            steps {
                script {
                    bat "docker rm -f %CONTAINER_NAME% || exit /b 0"
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                echo 'Running Container on Port 8081...'
                bat "docker run -d -p 8081:80 --name %CONTAINER_NAME% %DOCKER_IMAGE%"
            }
        }
    }

    post {
        success {
            echo 'Deployment Successful! Visit http://localhost:8081'
        }
    }
}
